<settings>
  <!--
      strings 30000 thru 30999 reserved for plugins and plugin settings
      strings 31000 thru 31999 reserved for skins
      strings 32000 thru 32999 reserved for scripts
      strings 33000 thru 33999 reserved for common strings used in add-ons
  -->
  <category label="30000">
    <setting label="30020" id="service" type="labelenum" values="Gmail|iCloud|docomo|Custom" default="Gmail"/>
    <!--Custom-->
    <setting label="30001" id="user" type="text" default="" visible="eq(-1,3)"/>
    <setting label="30002" id="password" type="text" option="hidden" default="" visible="eq(-2,3)"/>
    <setting label="30003" id="smtp_host" type="text" default="smtp.gmail.com" visible="eq(-3,3)"/>
    <setting label="30004" id="smtp_port" type="number" default="465" visible="eq(-4,3)"/>
    <setting label="30005" id="smtp_auth" type="bool" default="true" visible="eq(-5,3)"/>
    <setting label="30006" id="smtp_ssl" type="bool" default="true" visible="eq(-6,3)"/>
    <setting label="30007" id="smtp_tls" type="bool" default="false" visible="eq(-7,3)"/>
    <setting label="30008" id="smtp_from" type="text" default="%s@gmail.com" visible="eq(-8,3)"/>
    <setting label="30009" id="imap_host" type="text" default="imap.gmail.com" visible="eq(-9,3)"/>
    <setting label="30010" id="imap_port" type="number" default="993" visible="eq(-10,3)"/>
    <setting label="30011" id="imap_ssl" type="bool" default="true" visible="eq(-11,3)"/>
    <setting label="30012" id="imap_tls" type="bool" default="false" visible="eq(-12,3)"/>
    <!--Gmail-->
    <setting label="30001" id="user1" type="text" default="" visible="eq(-13,0)"/>
    <setting label="30002" id="password1" type="text" option="hidden" default="" visible="eq(-14,0)"/>
    <!--iCloud-->
    <setting label="30001" id="user2" type="text" default="" visible="eq(-15,1)"/>
    <setting label="30002" id="password2" type="text" option="hidden" default="" visible="eq(-16,1)"/>
    <!--docomo-->
    <setting label="30001" id="user3" type="text" default="" visible="eq(-17,2)"/>
    <setting label="30002" id="password3" type="text" option="hidden" default="" visible="eq(-18,2)"/>
    <setting label="30013" id="address3" type="text" default="" visible="eq(-19,2)"/>
    <!--action-->
    <setting label="30021" type="action" option="close" action="RunPlugin(plugin://$ID/?action=refresh)"/>
  </category>
  <category label="30200">
    <setting label="30204" id="to" type="text" default=""/>
    <setting label="30205" id="cc" type="text" default=""/>
    <setting label="30202" id="subject" type="text" default="subject"/>
    <setting label="30203" id="message" type="text" default="message"/>
    <setting label="30206" type="action" option="close" action="RunPlugin(plugin://$ID/?action=sendmessage)"/>
  </category>
  <category label="30100">
    <setting label="30103" id="listsize" type="labelenum" values="20|50|100|200|300|500|Unlimited" default="100"/>
    <setting label="30101" id="interval" type="labelenum" values="None|5|10|20|30|60" default="None"/>
    <setting label="30104" id="start" type="bool" default="true"/>
    <setting label="30102" id="cec" type="bool" default="false"/>
    <setting label="30201" id="bcc" type="bool" default="false"/>
    <setting label="30105" id="debug" type="bool" default="false"/>
  </category>
</settings>
