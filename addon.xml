<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.email.handler"
       name="E-Mail Handler"
       version="1.0"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup4" version="4.3.1"/>
    <import addon="script.module.chardet" version="2.2.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">E-Mail Client</summary>
    <summary lang="ja">電子メールクライアント</summary>
    <description lang="en">Support receiveing e-mails from IMAP4 mail service and sending e-mails by SMTP</description>
    <description lang="ja">Gmail、iCloudメールほかのIMAP4メール受信、SMTPによるメール送信に対応します</description>
    <disclaimer lang="en">Works on Windows &amp; MacOSX</disclaimer>
    <disclaimer lang="ja">WindowsとMacOSXで動作</disclaimer>
    <website>http://kodiful.com/</website>
  </extension>
</addon>
